@{
    ViewData["Title"] = "Home Page";
}

<template id="listitemTemplate">
    <li data-activityName>
        <a id="nameLink" class="nav-link" asp-area="" 
            asp-controller="Home" asp-action="ListItemClick">
            Activity
        </a>
    </li>
</template>

<div class="container text-center">
    <div class="row text-center">
        <div class="col-md-auto">
            <ul id="activities-list"></ul>
        </div>
        <div class="col-md-auto">
            <form>
                <input name="activityNameInput" type="text" class="form-control mb-3" 
                    id="exampleInputPassword1" placeholder="Activity name">
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>


<script src="~/js/home.js" asp-append-version="true"></script>