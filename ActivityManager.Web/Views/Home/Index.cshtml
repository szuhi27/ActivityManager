@{
    ViewData["Title"] = "Home Page";
}

<template id="listitemTemplate">
    <li data-activityName 
        class="mb-2 p-1 bg-light bg-opacity-10 
            border border-warning rounded-end
            d-flex">
        <a id="nameLink" class="nav-line d-inline p-2" asp-area="" 
            asp-controller="Home" asp-action="ListItemClick">
                Activity
        </a>
        <button type="button" 
            class="btn btn-danger d-inline"
            onclick="clickDeleteActivity()">
                Delete
        </button>
    </li>
</template>

<div class="container d-flex justify-content-center">
    <div class="row text-center">
        <div class="col-md-auto">
            <ul id="activities-list"></ul>
        </div>
        <div class="col-md-auto">
            <form>
                <input name="activityNameInput" type="text" class="form-control mb-3" 
                    id="exampleInputPassword1" placeholder="Activity name">
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>


<script src="~/js/home.js" asp-append-version="true"></script>